<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="mygame.editor.controlers.ToolbarController"

        alignment="CENTER_LEFT" spacing="10.0">
    <children>


        <HBox alignment="CENTER" minWidth="-Infinity" minHeight="-Infinity"
              styleClass="container_border">
            <children>

                <Button fx:id="btnSelect" layoutX="81.0" layoutY="33.0" mnemonicParsing="false"
                        styleClass="button" text="Body"
                        textFill="WHITE" onAction="#onSelect"/>
                <Button fx:id="btnBody" layoutX="81.0" layoutY="33.0" mnemonicParsing="false"
                        styleClass="button" text="Body"
                        textFill="WHITE" onAction="#onBodyMode"/>

                <Button fx:id="btnFixture" layoutX="110.0" layoutY="33.0" mnemonicParsing="false" styleClass="button"
                        text="Fixture"
                        textFill="WHITE" onAction="#onFixtureMode"/>

                <Button fx:id="btnCreate" layoutX="110.0" layoutY="33.0" mnemonicParsing="false" styleClass="button"
                        text="Create"
                        textFill="WHITE" onAction="#onCreateMode"/>

            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>

        </HBox>

        <HBox fx:id="hBoxActions" alignment="CENTER" minWidth="-Infinity" minHeight="-Infinity"
              styleClass="container_border">

            <children>

            </children>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
        </HBox>

    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Button fx:id="btnRun" text="Run" onAction="#onRun"/>
</HBox>