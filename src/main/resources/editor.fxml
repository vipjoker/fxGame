                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Button fx:id="btnRun" mnemonicParsing="false" onAction="#onRun" prefWidth="40.0" styleClass="my_button"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
            <SplitPane fx:id="root"  VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
