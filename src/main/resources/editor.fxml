<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="545.0" prefWidth="855.0"
      stylesheets="style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mygame.editor.controlers.Controller">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="GAMED">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Prefferences"/>
                        <MenuItem mnemonicParsing="false" text="About"/>
                        <Menu mnemonicParsing="false" onAction="#onAdd" text="Open folder"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                        <MenuItem mnemonicParsing="false" onAction="#onLoad" text="Load"/>
                        <MenuItem mnemonicParsing="false" onAction="#onSave" text="Save"/>
                        <MenuItem mnemonicParsing="false" text="Revert"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Preferencesâ€¦"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo"/>
                        <MenuItem mnemonicParsing="false" text="Redo"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Cut"/>
                        <MenuItem mnemonicParsing="false" text="Copy"/>
                        <MenuItem mnemonicParsing="false" text="Paste"/>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Select All"/>
                        <MenuItem mnemonicParsing="false" text="Unselect All"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Level">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Level properties"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="New Level"/>
                        <MenuItem mnemonicParsing="false" text="Open Level"/>
                        <MenuItem mnemonicParsing="false" text="Save Level"/>
                        <MenuItem mnemonicParsing="false" text="Save Level As"/>
                        <MenuItem mnemonicParsing="false" text="Close Level"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <items>
                        <CheckMenuItem mnemonicParsing="false" text="Editing Grid"/>
                        <CheckMenuItem mnemonicParsing="false" text="Center View"/>
                        <CheckMenuItem mnemonicParsing="false" text="Zoom out"/>
                        <CheckMenuItem mnemonicParsing="false" text="Zoom in"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <CheckMenuItem mnemonicParsing="false" text="Layers"/>
                        <CheckMenuItem mnemonicParsing="false" text="Tools"/>
                        <CheckMenuItem mnemonicParsing="false" text="Tile Palette"/>
                        <CheckMenuItem mnemonicParsing="false" text="Entities"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Utilities">
                    <items>
                        <MenuItem mnemonicParsing="false" text="FileRenamer"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox fx:id="toolbar" alignment="CENTER_LEFT" spacing="10.0">
            <children>

                <Button fx:id="btnMove" mnemonicParsing="false" onAction="#onSelect" prefWidth="40.0"
                        styleClass="button_move"/>
                <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#onEdit" prefWidth="40.0"
                        styleClass="button_edit"/>

                <Button fx:id="btnPoint" mnemonicParsing="false" onAction="#onEditPoint" prefWidth="40.0"
                        styleClass="button_square"/>
                <Button fx:id="btnRun" mnemonicParsing="false" onAction="#onRun" prefWidth="40.0"
                        styleClass="button_play"/>
                <Button fx:id="btnStop" mnemonicParsing="false" onAction="#onStop" prefWidth="40.0"
                        styleClass="button_stop"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <SplitPane fx:id="root" dividerPositions="0.3, 0.8" VBox.vgrow="ALWAYS">
            <items>
                <VBox fx:id="leftPane" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <Accordion VBox.vgrow="ALWAYS">
                            <panes>
                                <TitledPane animated="false" text="Create">
                                    <content>
                                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#onCreateSprite"
                                                        text="Create Sprite"/>
                                                <Button mnemonicParsing="false" onAction="#onCreateSquare" text="Create square body"/>
                                                <Button mnemonicParsing="false" onAction="#onCreateCircleBody" text="Create circle body"/>
                                                <Button mnemonicParsing="false" onAction="#onCreateChainBody" text="Create chain body"/>
                                                <Button mnemonicParsing="false" onAction="#onCreaetJoint" text="Create distance joint"/>
                                                <Button mnemonicParsing="false" onAction="#onCreateRevoluteJoint" text="Create revolute joint"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                <TitledPane animated="false" text="Fixtures">
                                    <content>
                                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#onChain" text="Line"/>
                                                <Button mnemonicParsing="false" onAction="#onCircle" text="Circle"/>
                                                <Button mnemonicParsing="false" onAction="#onPolygon" text="Polygon"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                            </panes>
                        </Accordion>
                        <TreeView fx:id="resourcesTreeview" prefHeight="300.0" prefWidth="189.0"/>
                        <TreeView fx:id="nodeTreeview" prefHeight="300.0" prefWidth="189.0"/>
                    </children>
                </VBox>
                <AnchorPane fx:id="centerPane"/>
                <VBox fx:id="rightPane" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <fx:include fx:id="info" source="info.fxml"/>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
